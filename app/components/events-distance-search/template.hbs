<div class="col-sm-3">
  <strong>Distance:</strong>
</div>
<div class="col-sm-9">
  <div class="row">
    <div class="col-xs-3">
      <div class="well well-sm pull-left">
        {{format-number distanceLowerBoundMiles maximumFractionDigits="1"}}
      </div>
    </div>
    <div class="col-xs-6 text-center">
      miles
    </div>
    <div class="col-xs-3">
      <div class="well well-sm pull-right">
        {{format-number distanceUpperBoundMiles maximumFractionDigits="1"}}
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      {{range-slider
        start=sliderStart
        range=sliderRange
        slide="distanceSlide"
        change='distanceChanged'}}
    </div>
  </div>
  <div class="row">
    <div class="col-xs-3">
      <div class="well well-sm pull-left">
        {{format-number distanceLowerBound maximumFractionDigits="1"}}
      </div>
    </div>
    <div class="col-xs-6 text-center">
      kilometers
    </div>
    <div class="col-xs-3">
      <div class="well well-sm pull-right">
        {{format-number distanceUpperBound maximumFractionDigits="1"}}
      </div>
    </div>
  </div>
</div>
