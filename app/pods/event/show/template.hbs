<div class="panel panel-default">
  <div class="panel-heading">{{model.name}}</div>
  <div class="panel-body">
    <dl class="dl-horizontal">
      <dt>Date</dt>
      <dd>{{moment-format model.startAtDate 'MM/DD/YYYY'}}</dd>
      <dt>Location</dt>
      <dd>{{model.city}}, {{model.state}}</dd>
      <dt>Website</dt>
      <dd><a href="{{model.url}}">{{model.url}}</a></dd>
    </dl>
  </div>
</div>
<div class="row">
  {{#link-to 'event' class="btn btn-default col-sm-2 col-sm-offset-2"}}Show All Events{{/link-to}}
  {{#link-to 'event.edit' model class="btn btn-primary col-sm-2 col-sm-offset-4"}}Edit{{/link-to}}
</div>
