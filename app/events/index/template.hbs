<h2 class="text-center">Upcoming Events</h2>

<div>

  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Map View</a></li>
    <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">List View</a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="home">
      <div class="row">
        <div class="col-md-4">
          <h4 class="text">Search controls go here</h4>
        </div>
        <div class="col-md-8">
          {{events-map events=model}}
        </div>
      </div>
    </div>
    <div role="tabpanel" class="tab-pane" id="profile">
      {{events-list model=model}}
    </div>
  </div>

</div>

<div class="row">
  {{#link-to 'events.new' class="btn btn-primary" }}Add New Event{{/link-to}}
</div>
