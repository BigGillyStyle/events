<h2 class="text-center">Upcoming Events</h2>

<div class="table-responsive">
  <table class="table table-condensed table-hover table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Date</th>
        <th>Location</th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |event|}}
        <tr>
          <td>
            {{#link-to "events.show" event}}{{event.name}}{{/link-to}}
          </td>
          <td>{{moment-format event.startAtDate 'MM/DD/YYYY'}}</td>
          <td>{{event.city}}, {{event.state}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
<div class="row">
  {{#link-to 'events.new' class="btn btn-primary" }}Add New Event{{/link-to}}
</div>
